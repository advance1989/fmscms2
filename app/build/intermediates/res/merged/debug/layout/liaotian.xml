<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:layout_marginBottom="0dp"
    >

    <ListView
        android:layout_marginBottom="0px"
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:id="@+id/listView"
        android:background="#F1F1F1"
        android:stackFromBottom="true"
        android:transcriptMode="alwaysScroll"
        android:layout_weight="0.84" />


    <LinearLayout
        android:background="@xml/borderline"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:layout_below="@+id/listView"
        android:layout_height="55dp"
        android:gravity="bottom"
        android:focusable="false"
        android:focusableInTouchMode="true"
        android:weightSum="1">
        <EditText
            android:id="@+id/sendText"
            android:layout_width="200px"
            android:layout_height="fill_parent"
            android:hint="发送内容"
            android:background="@null"
            android:layout_weight="0.99" />

        <ImageButton android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:text="礼物"
            android:background="@drawable/lw"
            android:id="@+id/giftbtn" />


    </LinearLayout>



</LinearLayout><!-- From: file:/Users/weilian/Desktop/code/fmscmsandroid1024%20vitamo/app/src/main/res/layout/liaotian.xml -->